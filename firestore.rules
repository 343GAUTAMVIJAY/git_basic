rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Bio details collection - users can only access their own documents
    match /bio/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Documents collection - users can only access their own documents
    match /documents/{documentId} {
      allow read, write, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Links collection - users can only access their own links
    match /links/{linkId} {
      allow read, write, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Notes collection - users can only access their own notes
    match /notes/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Todos collection - users can only access their own todos
    match /todos/{todoId} {
      allow read, write, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
  }
}